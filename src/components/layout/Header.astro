---
import type { Locale } from '../../i18n/config';
import { locales, localeNames, getLocalizedPath, getPathWithoutLocale } from '../../i18n/config';
import { useTranslations } from '../../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const { t } = useTranslations(locale);
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/knowledge', label: t('nav.knowledge') },
  { href: '/projects', label: t('nav.projects') },
  { href: '/media', label: t('nav.media') },
  { href: '/events', label: t('nav.events') },
  { href: '/about', label: t('nav.about') },
];
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <!-- Logo -->
      <a href={getLocalizedPath('/', locale)} class="logo">
        <img
          src="/sudormrf.jpg"
          alt="sudoremove"
          width="40"
          height="40"
          class="logo-image"
        />
        <span class="logo-text">
          sudo rm -rf<span class="cursor cursor-blink">_</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="nav-desktop">
        {navItems.map(({ href, label }) => {
          const localizedHref = getLocalizedPath(href, locale);
          const isActive = currentPath.startsWith(localizedHref) && localizedHref !== getLocalizedPath('/', locale);
          return (
            <a
              href={localizedHref}
              class:list={['nav-link', { active: isActive }]}
            >
              {label}
            </a>
          );
        })}

        <!-- Language Switcher -->
        <div class="lang-switcher">
          {locales.map((loc) => {
            const isCurrentLocale = loc === locale;
            const targetPath = getLocalizedPath(getPathWithoutLocale(currentPath), loc);
            return (
              <a
                href={targetPath}
                class:list={['lang-link', { active: isCurrentLocale }]}
              >
                {localeNames[loc]}
              </a>
            );
          })}
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="mobile-menu-btn" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="nav-mobile">
      {navItems.map(({ href, label }) => {
        const localizedHref = getLocalizedPath(href, locale);
        const isActive = currentPath.startsWith(localizedHref) && localizedHref !== getLocalizedPath('/', locale);
        return (
          <a
            href={localizedHref}
            class:list={['nav-link', { active: isActive }]}
          >
            {label}
          </a>
        );
      })}

      <!-- Mobile Language Switcher -->
      <div class="lang-switcher-mobile">
        {locales.map((loc) => {
          const isCurrentLocale = loc === locale;
          const targetPath = getLocalizedPath(getPathWithoutLocale(currentPath), loc);
          return (
            <a
              href={targetPath}
              class:list={['lang-link', { active: isCurrentLocale }]}
            >
              {localeNames[loc]}
            </a>
          );
        })}
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(13, 3, 15, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
    box-shadow: 0 2px 20px rgba(253, 115, 24, 0.1);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    transition: transform 0.2s;
  }

  .logo:hover {
    transform: scale(1.02);
  }

  .logo-image {
    border-radius: 50%;
    filter: drop-shadow(0 0 10px rgba(253, 115, 24, 0.5));
  }

  .logo-text {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-green);
    letter-spacing: 0.02em;
  }

  .cursor {
    color: var(--color-green);
    font-weight: 800;
  }

  /* Desktop Navigation */
  .nav-desktop {
    display: none;
    align-items: center;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .nav-desktop {
      display: flex;
    }
  }

  .nav-link {
    position: relative;
    padding: 0.5rem 1rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all 0.2s;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: all 0.3s;
    transform: translateX(-50%);
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  .nav-link:hover::after {
    width: 60%;
  }

  .nav-link.active {
    color: var(--color-text-primary);
    background: var(--color-surface);
  }

  /* Language Switcher */
  .lang-switcher {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-left: 1rem;
    padding-left: 1rem;
    border-left: 1px solid var(--color-border);
  }

  .lang-link {
    padding: 0.375rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    border-radius: var(--radius-sm);
    transition: all 0.2s;
  }

  .lang-link:hover {
    color: var(--color-text-primary);
  }

  .lang-link.active {
    background: var(--color-accent);
    color: var(--color-bg-primary);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
  }

  @media (min-width: 768px) {
    .mobile-menu-btn {
      display: none;
    }
  }

  .mobile-menu-btn span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-accent);
    border-radius: 2px;
    transition: all 0.3s;
  }

  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Mobile Navigation */
  .nav-mobile {
    display: none;
    flex-direction: column;
    padding: 1rem 0;
    border-top: 1px solid var(--color-border);
  }

  .nav-mobile.active {
    display: flex;
  }

  @media (min-width: 768px) {
    .nav-mobile {
      display: none !important;
    }
  }

  .nav-mobile .nav-link {
    padding: 0.75rem 1rem;
    border-radius: 0;
  }

  .nav-mobile .nav-link:hover {
    background: var(--color-accent-light);
  }

  .nav-mobile .nav-link::after {
    display: none;
  }

  .lang-switcher-mobile {
    display: flex;
    gap: 0.5rem;
    padding: 1rem;
    margin-top: 0.5rem;
    border-top: 1px solid var(--color-border);
  }

  .lang-switcher-mobile .lang-link {
    padding: 0.5rem 1rem;
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    menuBtn.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
  });
</script>
