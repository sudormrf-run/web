---
/**
 * HomeMediaSection Component
 * Media section for the home page with podcast, news shorts, and social buttons
 */

import { getLocalizedPath } from '../../i18n/config';

export interface Props {
  locale?: 'ko' | 'en';
}

const { locale = 'ko' } = Astro.props;

// YouTube & Social Links
const youtubeChannel = 'https://www.youtube.com/@sudoremove';
const instagramUrl = 'https://www.instagram.com/sudo.remove/';

// Playlist IDs
const podcastPlaylistId = 'PLLYXs4EFjbmlC86qaN9FXSK7ib0y3h3jN';
const newsPlaylistId = 'PLLYXs4EFjbmkqbBE7mskK9Uq7DwaCl8KL';

// KakaoTalk Open Chat
const kakaoUrl = 'https://open.kakao.com/o/gS5OQJth';

const labels = {
  ko: {
    title: '미디어',
    subtitle: '팟캐스트와 AI 뉴스',
    viewAll: '전체 보기',
    podcast: '팟캐스트',
    podcastDesc: '편집된 팟캐스트 클립 모음',
    news: 'AI 뉴스',
    newsDesc: 'AI 최신 뉴스 쇼츠',
    subscribe: 'YouTube',
    follow: 'Instagram',
    openChat: '오픈채팅',
  },
  en: {
    title: 'Media',
    subtitle: 'Podcast and AI News',
    viewAll: 'View All',
    podcast: 'Podcast',
    podcastDesc: 'Curated podcast clips',
    news: 'AI News',
    newsDesc: 'AI news shorts',
    subscribe: 'YouTube',
    follow: 'Instagram',
    openChat: 'Open Chat',
  },
};

const t = labels[locale];
---

<section class="media-section">
  <div class="container">
    <!-- Section Header -->
    <header class="section-header">
      <div class="section-title-wrapper">
        <span class="section-icon">
          <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z" />
            <path fill="var(--color-bg-primary)" d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
          </svg>
        </span>
        <div>
          <h2 class="section-title">{t.title}</h2>
          <p class="section-description">{t.subtitle}</p>
        </div>
      </div>
      <a href={getLocalizedPath('/media', locale)} class="section-link">
        {t.viewAll}
        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </header>

    <!-- Media Grid -->
    <div class="media-grid">
      <!-- Podcast Card (Horizontal) -->
      <a href={`https://www.youtube.com/playlist?list=${podcastPlaylistId}`} target="_blank" rel="noopener noreferrer" class="media-card podcast-card">
        <div class="embed-wrapper horizontal">
          <iframe
            src={`https://www.youtube.com/embed/videoseries?list=${podcastPlaylistId}`}
            title={t.podcast}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
        <div class="media-info">
          <h3 class="media-title">{t.podcast}</h3>
          <p class="media-desc">{t.podcastDesc}</p>
        </div>
      </a>

      <!-- News Shorts Card (Vertical) -->
      <a href={`https://www.youtube.com/playlist?list=${newsPlaylistId}`} target="_blank" rel="noopener noreferrer" class="media-card news-card">
        <div class="embed-wrapper vertical">
          <iframe
            src={`https://www.youtube.com/embed/videoseries?list=${newsPlaylistId}`}
            title={t.news}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
        <div class="media-info">
          <h3 class="media-title">{t.news}</h3>
          <p class="media-desc">{t.newsDesc}</p>
        </div>
      </a>

      <!-- Social Buttons Column -->
      <div class="social-column">
        <a href={youtubeChannel} target="_blank" rel="noopener noreferrer" class="social-btn youtube-btn">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z" />
            <path fill="var(--color-bg-primary)" d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
          </svg>
          <span>{t.subscribe}</span>
        </a>

        <a href={instagramUrl} target="_blank" rel="noopener noreferrer" class="social-btn instagram-btn">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          <span>{t.follow}</span>
        </a>

        <a href={kakaoUrl} target="_blank" rel="noopener noreferrer" class="social-btn kakao-btn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 3c-5.52 0-10 3.59-10 8 0 2.52 1.64 4.74 4.14 6.09-.18.64-.72 2.32-.82 2.68-.13.45.17.44.35.32.14-.09 2.25-1.53 3.16-2.14.68.1 1.39.15 2.17.15 5.52 0 10-3.59 10-8s-4.48-8-10-8z" />
          </svg>
          <span>{t.openChat}</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .media-section {
    padding: 3rem 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .section-title-wrapper {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .section-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 0, 0, 0.15);
    color: #ff0000;
    border-radius: var(--radius-lg);
    flex-shrink: 0;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
  }

  .section-description {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .section-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    font-weight: 400;
    text-decoration: none;
    transition: all 0.2s;
  }

  .section-link:hover {
    color: #ff0000;
    font-weight: 600;
  }

  .section-link svg {
    transition: transform 0.2s;
  }

  .section-link:hover svg {
    transform: translateX(3px);
  }

  /* Media Grid */
  .media-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .media-grid {
      grid-template-columns: 1fr 180px 200px;
      align-items: stretch;
    }
  }

  @media (min-width: 1024px) {
    .media-grid {
      grid-template-columns: 1fr 200px 220px;
    }
  }

  /* Media Cards */
  .media-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid rgba(255, 0, 0, 0.3);
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .media-card:hover {
    border-color: #ff0000;
    transform: translateY(-4px);
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.3),
      0 0 20px rgba(255, 0, 0, 0.3);
  }

  /* Embed Wrappers */
  .embed-wrapper {
    position: relative;
    background: var(--color-bg-secondary);
    overflow: hidden;
    flex: 1;
  }

  .embed-wrapper.horizontal {
    min-height: 200px;
  }

  .embed-wrapper.vertical {
    min-height: 200px;
  }

  .embed-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  @media (min-width: 768px) {
    .podcast-card,
    .news-card {
      height: 410px;
    }

    .embed-wrapper iframe {
      pointer-events: none;
    }
  }

  .media-card:hover .embed-wrapper iframe {
    pointer-events: auto;
  }

  .media-info {
    padding: 1rem 1.25rem;
  }

  .media-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
  }

  .media-desc {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  /* Social Column */
  .social-column {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.6rem 1rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .youtube-btn {
    background: #ff0000;
    color: white;
  }

  .youtube-btn:hover {
    background: #cc0000;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 0, 0, 0.4);
  }

  .instagram-btn {
    background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
    color: white;
  }

  .instagram-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(225, 48, 108, 0.4);
  }

  .kakao-btn {
    background: #fee500;
    color: #3c1e1e;
  }

  .kakao-btn:hover {
    background: #fdd835;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 229, 0, 0.4);
  }

  /* Mobile adjustments */
  @media (max-width: 767px) {
    .media-grid {
      grid-template-columns: 1fr 1fr;
    }

    .podcast-card {
      grid-column: 1 / -1;
    }

    .social-column {
      grid-column: 1 / -1;
      flex-direction: row;
      gap: 0.5rem;
    }

    .social-btn {
      flex: 1;
      padding: 0.5rem;
      font-size: 0.75rem;
    }
  }
</style>
