---
import Layout from '../../layouts/Layout.astro';
import HeroQuote from '../../components/HeroQuote.astro';
import HomeKnowledgeSection from '../../components/home/HomeKnowledgeSection.astro';
import HomeMediaSection from '../../components/home/HomeMediaSection.astro';
import HomeEventsSection from '../../components/home/HomeEventsSection.astro';

const locale = 'en';
---

<Layout title="sudoremove" locale={locale}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <div class="glow-orb orb-1"></div>
      <div class="glow-orb orb-2"></div>
      <div class="glow-orb orb-3"></div>
    </div>

    <div class="container">
      <div class="hero-content">
        <HeroQuote locale={locale} />
      </div>
    </div>
  </section>

  <!-- Knowledge Section with Graph -->
  <HomeKnowledgeSection locale={locale} />

  <!-- Media Section -->
  <HomeMediaSection locale={locale} />

  <!-- Events Section -->
  <HomeEventsSection locale={locale} />
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    padding: 4rem 0 3rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
    overflow: hidden;
  }

  .glow-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
  }

  .orb-1 {
    top: -10%;
    left: 30%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(253, 115, 24, 0.4) 0%, transparent 70%);
    animation: float 8s ease-in-out infinite;
  }

  .orb-2 {
    top: 20%;
    right: 10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(67, 214, 168, 0.3) 0%, transparent 70%);
    animation: float 10s ease-in-out infinite reverse;
  }

  .orb-3 {
    bottom: -20%;
    left: 10%;
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(95, 173, 254, 0.3) 0%, transparent 70%);
    animation: float 12s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
  }

  .hero-content {
    max-width: 720px;
    margin: 0 auto;
    text-align: center;
  }

</style>
