---
import Layout from '../../../layouts/Layout.astro';

const locale = 'en';
---

<Layout title="Media Archive" locale={locale}>
  <div class="fallback-page">
    <div class="container">
      <div class="fallback-content">
        <div class="fallback-icon">
          <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
          </svg>
        </div>
        <h1 class="fallback-title">Korean Only</h1>
        <p class="fallback-message">
          The Media Archive is currently available in Korean only.
        </p>
        <p class="fallback-sub">
          We're working on English translations. In the meantime, you can explore the Korean version.
        </p>
        <div class="fallback-actions">
          <a href="/archive/" class="btn-primary">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
            </svg>
            View in Korean
          </a>
          <a href="/en/" class="btn-secondary">
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .fallback-page {
    padding: 4rem 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .fallback-content {
    max-width: 480px;
    margin: 0 auto;
    text-align: center;
  }

  .fallback-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 100px;
    background: rgba(67, 214, 168, 0.1);
    border-radius: 50%;
    color: var(--color-green);
    margin-bottom: 1.5rem;
  }

  .fallback-title {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
  }

  .fallback-message {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  .fallback-sub {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .fallback-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--color-green);
    color: var(--color-bg-primary);
  }

  .btn-primary:hover {
    background: var(--color-green-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(67, 214, 168, 0.3);
  }

  .btn-secondary {
    background: var(--color-surface);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    border-color: var(--color-green);
    color: var(--color-green);
  }
</style>
