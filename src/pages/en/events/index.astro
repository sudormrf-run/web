---
import Layout from '../../../layouts/Layout.astro';
import EventCard from '../../../components/events/EventCard.astro';
import { getCollection } from 'astro:content';
import { useTranslations } from '../../../i18n/utils';

const locale = 'en';
const { t } = useTranslations(locale);

// Highlight videos (hosted + participated events)
const highlightVideos = [
  { id: 'ASwwyra1_sc', title: 'CoRL 2025', type: 'participated' },
  { id: 'T87wJWv0Hvg', title: 'Physical AI Workshop (ROBOTIS, SK Hynix)', type: 'hosted' },
  { id: 'XeL5olUQPGU', title: 'AI Robotics Korea', type: 'participated' },
  { id: 'HgN0qIFSd8I', title: 'HuggingFace LeRobot Hackathon', type: 'hosted' },
];

// Get all events (using Korean content but displaying in English context)
const allEvents = await getCollection('events', ({ slug }) => slug.startsWith('ko/'));

// Sort events by date (newest first)
const sortedEvents = allEvents.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Separate upcoming and past events
const upcomingEvents = sortedEvents.filter(
  (event) => event.data.status === 'upcoming' || event.data.status === 'ongoing'
);
const pastEvents = sortedEvents.filter((event) => event.data.status === 'past');
---

<Layout title={t('nav.events')} locale={locale}>
  <div class="events-page">
    <div class="container">
      <!-- Header -->
      <header class="page-header">
        <h1 class="page-title">
          <span class="gradient-text">{t('nav.events')}</span>
        </h1>
        <p class="page-subtitle">
          Check out the latest news and events from sudoremove
        </p>
      </header>

      <!-- Top Row: Notice + Upcoming Events -->
      <section class="top-row">
        <div class="top-row-grid">
          <!-- Notice Card -->
          <div class="top-card notice-card">
            <span class="top-badge notice-badge">Notice</span>
            <h3>Join the LeRobot Community!</h3>
            <p>Share news and information about the LeRobot project in our KakaoTalk open chat room.</p>
            <a
              href="https://open.kakao.com/o/gS5OQJth"
              target="_blank"
              rel="noopener noreferrer"
              class="kakao-link"
            >
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 3c-5.52 0-10 3.59-10 8 0 2.52 1.64 4.74 4.14 6.09-.18.64-.72 2.32-.82 2.68-.13.45.17.44.35.32.14-.09 2.25-1.53 3.16-2.14.68.1 1.39.15 2.17.15 5.52 0 10-3.59 10-8s-4.48-8-10-8z" />
              </svg>
              Join Chat
            </a>
          </div>

          <!-- Upcoming Event Cards -->
          {upcomingEvents.map((event) => (
            <a href={`/en/events/${event.slug.replace('ko/', '')}`} class="top-card upcoming-card">
              <span class="top-badge upcoming-badge">Upcoming</span>
              <h3>{event.data.title}</h3>
              <p>{event.data.description}</p>
              <div class="upcoming-meta">
                <span class="upcoming-date">
                  <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  {event.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long' })}
                </span>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Highlight Videos Section -->
      <section class="highlight-section">
        <h2 class="section-title">
          <span class="title-icon highlight-icon">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z" />
              <path fill="var(--color-bg-primary)" d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
            </svg>
          </span>
          Highlight Videos
        </h2>
        <div class="highlight-scroll">
          <div class="highlight-track">
            {highlightVideos.map((video) => (
              <div class="video-card">
                <div class="video-wrapper">
                  <iframe
                    src={`https://www.youtube.com/embed/${video.id}`}
                    title={video.title}
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                  ></iframe>
                </div>
                <div class="video-info">
                  <span class={`video-badge ${video.type}`}>
                    {video.type === 'hosted' ? 'Hosted' : 'Participated'}
                  </span>
                  <h3 class="video-title">{video.title}</h3>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Past Events -->
      {pastEvents.length > 0 && (
        <section class="events-section">
          <h2 class="section-title">
            <span class="title-icon past-icon">
              <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
              </svg>
            </span>
            Past Events
          </h2>
          <div class="events-grid">
            {pastEvents.map((event) => (
              <EventCard event={event} locale={locale} />
            ))}
          </div>
        </section>
      )}

      {allEvents.length === 0 && (
        <div class="no-events">
          <p>No events registered yet.</p>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .events-page {
    padding: 2rem 0 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Top Row: Notice + Upcoming */
  .top-row {
    margin-bottom: 3rem;
  }

  .top-row-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .top-row-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .top-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
  }

  .top-card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.2),
      0 0 20px rgba(253, 115, 24, 0.15);
  }

  .top-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
  }

  /* Notice & Upcoming cards - Orange theme (except Kakao button) */
  .notice-card::before,
  .upcoming-card::before {
    background: linear-gradient(90deg, var(--color-accent), #fee500);
  }

  .notice-card,
  .upcoming-card {
    border-color: rgba(253, 115, 24, 0.4);
    text-decoration: none;
  }

  .top-badge {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    border-radius: var(--radius-sm);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 0.75rem;
    width: fit-content;
  }

  .notice-badge,
  .upcoming-badge {
    background: rgba(253, 115, 24, 0.2);
    color: var(--color-accent);
  }

  .top-card h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .top-card p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 1rem;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .kakao-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    background: #fee500;
    color: #3c1e1e;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    font-size: 0.8rem;
    font-weight: 700;
    transition: all 0.3s;
    width: fit-content;
  }

  .kakao-link:hover {
    background: #fdd835;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 229, 0, 0.4);
  }

  .upcoming-meta {
    margin-top: auto;
  }

  .upcoming-date {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.8rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  /* Events Sections */
  .events-section {
    margin-bottom: 4rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 1.5rem;
  }

  .title-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-md);
  }

  .upcoming-icon {
    background: rgba(253, 115, 24, 0.15);
    color: var(--color-accent);
  }

  .past-icon {
    background: rgba(67, 214, 168, 0.15);
    color: var(--color-green);
  }

  .highlight-icon {
    background: rgba(255, 0, 0, 0.15);
    color: #ff0000;
  }

  /* Highlight Section */
  .highlight-section {
    margin-bottom: 4rem;
  }

  .highlight-scroll {
    overflow-x: scroll;
    margin: 0 -1rem;
    padding: 0 1rem;
    -webkit-overflow-scrolling: touch;
  }

  .highlight-scroll::-webkit-scrollbar {
    height: 10px;
  }

  .highlight-scroll::-webkit-scrollbar-track {
    background: var(--color-bg-secondary);
    border-radius: 5px;
  }

  .highlight-scroll::-webkit-scrollbar-thumb {
    background: rgba(255, 0, 0, 0.4);
    border-radius: 5px;
    border: 2px solid var(--color-bg-secondary);
  }

  .highlight-scroll::-webkit-scrollbar-thumb:hover {
    background: #ff0000;
  }

  .highlight-track {
    display: flex;
    gap: 1.25rem;
    padding: 0.5rem 0 1rem;
  }

  /* Highlight video cards - Red theme (matches icon) */
  .video-card {
    flex-shrink: 0;
    width: 320px;
    background: var(--color-surface);
    border: 1px solid rgba(255, 0, 0, 0.3);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .video-card:hover {
    border-color: #ff0000;
    transform: translateY(-4px);
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.3),
      0 0 20px rgba(255, 0, 0, 0.4);
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    background: var(--color-bg-secondary);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-info {
    padding: 1rem;
  }

  .video-badge {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .video-badge.hosted,
  .video-badge.participated {
    background: rgba(255, 0, 0, 0.2);
    color: #ff0000;
  }

  .video-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .events-grid {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .events-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .events-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .no-events {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-text-muted);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .notice-card {
      padding: 1.5rem;
    }

    .notice-card h3 {
      font-size: 1.25rem;
    }

    .kakao-link {
      display: flex;
      justify-content: center;
    }
  }
</style>
