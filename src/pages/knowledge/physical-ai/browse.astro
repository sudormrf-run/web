<script define:vars={{ enhancedGraphData }}>
  // Full graph data for filtering
  const fullGraphData = enhancedGraphData;

  // Current filter state
  let currentCategory = 'all';
  let currentSearch = '';

  // Get graph instance
  const getGraphInstance = () => {
    const container = document.querySelector('[id^="graph-"]');
    return container?._graphInstance;
  };

  // Get highlighted node IDs based on current filters (returns empty set if no filter = all highlighted)
  function getHighlightedNodeIds() {
    // No filters active = return empty set (means all nodes highlighted)
    if (currentCategory === 'all' && !currentSearch) {
      return new Set();
    }

    let filteredNodes = fullGraphData.nodes;

    // Filter by category
    if (currentCategory !== 'all') {
      filteredNodes = filteredNodes.filter(node => node.category === currentCategory);
    }

    // Filter by search
    if (currentSearch) {
      const query = currentSearch.toLowerCase();
      filteredNodes = filteredNodes.filter(node =>
        node.label.toLowerCase().includes(query) ||
        (node.description && node.description.toLowerCase().includes(query)) ||
        (node.tags && node.tags.some(tag => tag.toLowerCase().includes(query)))
      );
    }

    return new Set(filteredNodes.map(n => n.id));
  }

  // Apply filter (highlight matching nodes, dim others)
  function applyFilter() {
    const graph = getGraphInstance();
    if (graph) {
      const highlightedIds = getHighlightedNodeIds();
      graph.setFilterHighlight(highlightedIds);
    }
  }

  // Search input
  const searchInput = document.getElementById('searchInput');
  const clearSearch = document.getElementById('clearSearch');

  let searchTimeout;
  searchInput?.addEventListener('input', (e) => {
    const query = e.target.value.trim();
    clearSearch.style.display = query ? 'flex' : 'none';

    // Debounce
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
      currentSearch = query;
      applyFilter();
    }, 300);
  });

  clearSearch?.addEventListener('click', () => {
    searchInput.value = '';
    clearSearch.style.display = 'none';
    currentSearch = '';
    applyFilter();
  });

  // Category filter - reset selection and search, then apply category
  const filterChips = document.querySelectorAll('.filter-chip');
  filterChips.forEach(chip => {
    chip.addEventListener('click', () => {
      filterChips.forEach(c => c.classList.remove('active'));
      chip.classList.add('active');
      currentCategory = chip.getAttribute('data-category') || 'all';

      // Clear search
      if (searchInput) {
        searchInput.value = '';
        clearSearch.style.display = 'none';
      }
      currentSearch = '';

      // Reset graph view and clear node selection
      const graph = getGraphInstance();
      if (graph) {
        graph.resetView();
      }

      // Clear panel selection by dispatching empty select event
      document.dispatchEvent(new CustomEvent('graph:node-select', {
        detail: { node: null, connectedNodes: [] }
      }));

      // Apply category filter
      applyFilter();
    });
  });

  // Tag filter from panel - reset everything first, then apply tag search
  document.addEventListener('panel:filter-tag', ((e) => {
    const tag = e.detail.tag;
    if (tag && searchInput) {
      // Reset category to 'all'
      filterChips.forEach(c => c.classList.remove('active'));
      document.querySelector('.filter-chip[data-category="all"]')?.classList.add('active');
      currentCategory = 'all';

      // Reset graph view first
      const graph = getGraphInstance();
      if (graph) {
        graph.clearFilterHighlight();
        graph.resetView();
      }

      // Then apply tag search
      searchInput.value = tag;
      clearSearch.style.display = 'flex';
      currentSearch = tag;
      applyFilter();
    }
  }));

  // Focus node from panel - reset everything first, then focus and update panel
  document.addEventListener('panel:focus-node', ((e) => {
    const nodeId = e.detail.nodeId;
    if (nodeId) {
      // Reset category to 'all'
      filterChips.forEach(c => c.classList.remove('active'));
      document.querySelector('.filter-chip[data-category="all"]')?.classList.add('active');
      currentCategory = 'all';

      // Clear search
      if (searchInput) {
        searchInput.value = '';
        clearSearch.style.display = 'none';
      }
      currentSearch = '';

      // Reset filter highlight and focus on node
      const graph = getGraphInstance();
      if (graph) {
        graph.clearFilterHighlight();
        graph.focusNode(nodeId);
      }

      // Find node data and update panel
      const node = fullGraphData.nodes.find(n => n.id === nodeId);
      if (node) {
        // Get connected nodes
        const connectedIds = new Set([nodeId]);
        fullGraphData.links.forEach(link => {
          const sourceId = typeof link.source === 'object' ? link.source.id : link.source;
          const targetId = typeof link.target === 'object' ? link.target.id : link.target;
          if (sourceId === nodeId) connectedIds.add(targetId);
          if (targetId === nodeId) connectedIds.add(sourceId);
        });
        const connectedNodes = fullGraphData.nodes.filter(n => connectedIds.has(n.id));

        // Dispatch event to update panel
        document.dispatchEvent(new CustomEvent('graph:node-select', {
          detail: { node, connectedNodes }
        }));
      }
    }
  }));

  // Sidebar toggle
  const sidebarToggle = document.getElementById('sidebarToggle');
  const sidebarClose = document.getElementById('sidebarClose');
  const sidebarLeft = document.getElementById('sidebarLeft');
  const sidebarOverlay = document.getElementById('sidebarOverlay');

  function openSidebar() {
    sidebarLeft?.classList.add('open');
    sidebarOverlay?.classList.add('show');
    document.body.style.overflow = 'hidden';
  }

  function closeSidebar() {
    sidebarLeft?.classList.remove('open');
    sidebarOverlay?.classList.remove('show');
    document.body.style.overflow = '';
  }

  sidebarToggle?.addEventListener('click', openSidebar);
  sidebarClose?.addEventListener('click', closeSidebar);
  sidebarOverlay?.addEventListener('click', closeSidebar);

  // Category/Subcategory toggles in sidebar
  document.querySelectorAll('.category-toggle').forEach(button => {
    button.addEventListener('click', () => {
      const isExpanded = button.getAttribute('data-expanded') === 'true';
      const content = button.nextElementSibling;
      button.setAttribute('data-expanded', String(!isExpanded));
      button.classList.toggle('expanded', !isExpanded);
      content?.classList.toggle('expanded', !isExpanded);
    });
  });

  document.querySelectorAll('.subcategory-toggle').forEach(button => {
    button.addEventListener('click', () => {
      const isExpanded = button.getAttribute('data-expanded') === 'true';
      const content = button.nextElementSibling;
      button.setAttribute('data-expanded', String(!isExpanded));
      button.classList.toggle('expanded', !isExpanded);
      content?.classList.toggle('expanded', !isExpanded);
    });
  });
</script>

