---
import Layout from '../../../layouts/Layout.astro';
import GraphView from '../../../components/GraphView.astro';
import DocumentPanel from '../../../components/DocumentPanel.astro';
import { getCollection } from 'astro:content';
import { generateGraphData } from '../../../utils/graphData';

const locale = 'ko';

// Get all knowledge content for Korean
const allKnowledge = await getCollection('knowledge', ({ slug }) => slug.startsWith('ko/'));

// Filter to only actual content (not category index pages)
const contentItems = allKnowledge.filter(item => {
  const segments = item.slug.split('/');
  return segments.length >= 3;
});

// Generate graph data with additional node info for panel
const graphData = generateGraphData(contentItems, locale);

// Enhance nodes with description and tags for panel display
const enhancedNodes = graphData.nodes.map(node => {
  const contentItem = contentItems.find(item => `doc-${item.slug}` === node.id);
  return {
    ...node,
    description: contentItem?.data.description || '',
    tags: contentItem?.data.tags || [],
  };
});

const enhancedGraphData = {
  nodes: enhancedNodes,
  links: graphData.links,
};

// Categories configuration
const categories = [
  { id: 'essays', name: '에세이', color: 'yellow' },
  { id: 'models', name: '모델', color: 'blue' },
  { id: 'companies', name: '기업', color: 'green' },
  { id: 'hardware', name: '하드웨어', color: 'purple' },
  { id: 'people', name: '인물', color: 'pink' },
];

// Hardware subcategories
const hardwareSubcategories = [
  { id: 'humanoids', name: '휴머노이드' },
  { id: 'quadrupeds', name: '4족 보행' },
  { id: 'arms', name: '로봇 팔' },
  { id: 'hands', name: '로봇 손' },
  { id: 'mobile', name: '모바일' },
  { id: 'misc', name: '기타' },
];

// Group content by category for sidebar
const groupedContent = categories.map(category => {
  const items = contentItems
    .filter(item => item.data.category === category.id)
    .sort((a, b) => a.data.title.localeCompare(b.data.title, 'ko'));

  let subcategories = null;
  if (category.id === 'hardware') {
    subcategories = hardwareSubcategories.map(sub => {
      const subItems = items.filter(item => {
        const slugParts = item.slug.split('/');
        return slugParts.length >= 4 && slugParts[2] === sub.id;
      });
      return { ...sub, items: subItems };
    }).filter(sub => sub.items.length > 0);
  }

  return { ...category, items, subcategories };
});

// Total counts
const totalDocs = contentItems.length;
