---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

const locale = 'ko';
const { t } = useTranslations(locale);
---

<Layout title={t('knowledge.title')} locale={locale}>
  <div class="knowledge-page">
    <div class="container">
      <!-- Physical AI Section -->
      <section class="topic-section">
        <header class="section-header">
          <h2 class="section-title">Physical AI</h2>
          <a href="/knowledge/physical-ai" class="explore-link">
            자세히 보기
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </header>
        <div class="cards-grid">
          <a href="/knowledge/physical-ai/browse" class="card card-graph">
            <div class="card-thumbnail">
              <img src="/images/graph-thumbnail.png" alt="Knowledge Graph" loading="lazy" />
            </div>
            <div class="card-body">
              <h3 class="card-title">그래프 색인</h3>
              <p class="card-description">문서 간 연결 관계를 그래프로 탐색</p>
            </div>
          </a>
          <div class="card card-placeholder">
            <h3 class="card-title">TBD</h3>
            <p class="card-description">콘텐츠 준비 중</p>
          </div>
        </div>
      </section>

      <!-- Projects Section -->
      <section class="topic-section">
        <header class="section-header">
          <h2 class="section-title">Projects</h2>
        </header>
        <div class="cards-grid">
          <div class="card card-placeholder">
            <h3 class="card-title">TBD</h3>
            <p class="card-description">콘텐츠 준비 중</p>
          </div>
        </div>
      </section>

      <!-- LLM Section -->
      <section class="topic-section">
        <header class="section-header">
          <h2 class="section-title">LLM</h2>
        </header>
        <div class="cards-grid">
          <a href="https://sudormrf.run/2025/02/27/pretraining/" target="_blank" rel="noopener noreferrer" class="card card-link">
            <h3 class="card-title">
              LLM을 만드는 법
              <svg class="external-icon" width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </h3>
            <p class="card-description">LLM 사전학습의 전체 과정을 다루는 가이드</p>
          </a>
          <a href="https://jonhpark7966.github.io/FineTuning_Course/" target="_blank" rel="noopener noreferrer" class="card card-link">
            <h3 class="card-title">
              LLM 파인 튜닝 워크샵 리소스
              <svg class="external-icon" width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </h3>
            <p class="card-description">LLM 파인 튜닝 실습을 위한 워크샵 자료 모음</p>
          </a>
        </div>
      </section>
    </div>
  </div>
</Layout>

<style>
  .knowledge-page {
    padding: 3rem 0 5rem;
  }

  /* Topic Section */
  .topic-section {
    margin-bottom: 3rem;
  }

  .section-header {
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .explore-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-accent);
    text-decoration: none;
    transition: gap 0.2s;
  }

  .explore-link:hover {
    gap: 0.5rem;
  }

  /* Cards Grid - Fixed width cards */
  .cards-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 1.25rem 1.5rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all 0.2s ease;
    width: 280px;
    min-height: 100px;
  }

  .card-placeholder {
    border-style: dashed;
    opacity: 0.5;
  }

  .card-graph {
    width: 320px;
    min-height: auto;
    padding: 0;
    overflow: hidden;
  }

  .card-thumbnail {
    width: 100%;
    height: 160px;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card-graph:hover .card-thumbnail img {
    transform: scale(1.05);
  }

  .card-body {
    padding: 1rem 1.25rem 1.25rem;
  }

  .card-graph .card-title {
    margin-bottom: 0.25rem;
  }

  .card-graph .card-description {
    margin: 0;
  }

  .card-link:hover {
    border-color: var(--color-accent);
    background: var(--color-bg-secondary);
  }

  .card-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.375rem;
    line-height: 1.3;
  }

  .card-link:hover .card-title {
    color: var(--color-accent);
  }

  .external-icon {
    flex-shrink: 0;
    opacity: 0.5;
  }

  .card-link:hover .external-icon {
    opacity: 1;
  }

  .card-description {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    flex: 1;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .knowledge-page {
      padding: 2rem 0 3rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .card {
      width: 100%;
    }
  }
</style>
